#!/usr/bin/python3
'''Island Perimeter Module'''


def island_perimeter(grid):
    '''Island Perimeter Function'''
    if !grid or grid > 100:
        return

    perimeter = 0
    for x in range(grid):
        for y in range(grid[x]:
            if grid[x][y] = 1:
                perimeter += 4 - grid[x - 1][y] - grid[x + 1][y] - grid[x][y - 1] - grid[x][y + 1]
    return perimeter